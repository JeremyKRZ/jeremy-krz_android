<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="@drawable/custom_background"
    android:layout_margin="5dp"
    android:padding="12dp"
    >

    <ImageView
        android:id="@+id/itemImage"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/samsung_phone"
        android:adjustViewBounds="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="Phone image"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/itemRecyclerViewPhoneName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/title"
        android:textFontWeight="600"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toTopOf="@id/itemRecyclerViewBrandName"
        app:layout_constraintLeft_toRightOf="@+id/itemImage"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@tools:sample/cities" />


    <TextView
        android:id="@+id/itemRecyclerViewBrandName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/subtitle"
        android:layout_marginStart="20dp"
        app:layout_constraintLeft_toRightOf="@+id/itemImage"
        app:layout_constraintTop_toBottomOf="@id/itemRecyclerViewPhoneName"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="@tools:sample/full_names" />


</androidx.constraintlayout.widget.ConstraintLayout>
